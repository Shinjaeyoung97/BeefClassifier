<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".WriteActivity">

    <ImageButton
        android:id="@+id/WriteBackBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:src="@drawable/abc_vector_test"
        android:tint="#C86565"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2.3"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:cardBackgroundColor="#FFFFFF"
            app:cardUseCompatPadding="true">

            <ImageButton
                android:id="@+id/ImageDeleteBtn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|top"
                android:background="#00FFFFFF"
                android:backgroundTint="#FFFFFF"
                android:tint="#FF6769"
                android:visibility="invisible"
                app:srcCompat="@android:drawable/ic_menu_close_clear_cancel"
                tools:visibility="gone" />

            <ImageView
                android:id="@+id/attachimg1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:cardBackgroundColor="#FFFFFF"
            app:cardUseCompatPadding="true">

            <ImageButton
                android:id="@+id/ImageDeleteBtn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|top"
                android:background="#00ff0000"
                android:tint="#FF6769"
                android:visibility="invisible"
                app:srcCompat="@android:drawable/ic_menu_close_clear_cancel"
                tools:visibility="gone" />

            <ImageView
                android:id="@+id/attachimg2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:cardBackgroundColor="#FFFFFF"
            app:cardUseCompatPadding="true">

            <ImageButton
                android:id="@+id/ImageDeleteBtn3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|top"
                android:background="#00ff0000"
                android:tint="#FF6769"
                android:visibility="invisible"
                app:srcCompat="@android:drawable/ic_menu_close_clear_cancel"
                tools:visibility="gone" />

            <ImageView
                android:id="@+id/attachimg3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:cardBackgroundColor="#FFFFFF"
            app:cardUseCompatPadding="true">

            <TextView
                android:id="@+id/attachtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:text="TextView"
                android:textColor="#000000"
                android:textStyle="bold"
                android:visibility="visible" />

            <ImageButton
                android:id="@+id/attachBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00ff0000"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/cameraicon" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="10dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <EditText
            android:id="@+id/EditTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:backgroundTint="#FFFFFF"
            android:ems="10"
            android:hint="제목"
            android:inputType="textPersonName"
            android:textColor="#000000"
            android:textColorHint="#C86565"
            android:textSize="24sp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:cardElevation="10dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <EditText
            android:id="@+id/EditContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:background="#FFFFFF"
            android:ems="10"
            android:hint="내용"
            android:inputType="textMultiLine|textPersonName"
            android:scrollHorizontally="false"
            android:textColor="#000000"
            android:textColorHint="#C86565" />
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/ConfirmButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF6769"
        android:gravity="center"
        android:text="등록"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</LinearLayout>