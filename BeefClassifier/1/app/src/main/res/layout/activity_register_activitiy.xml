<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".RegisterActivity">

    <Button
        android:id="@+id/registerbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:background="#00FFFFFF"
        android:text="SIGN UP"
        android:textColor="#FF6769"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordcheckedt" />

    <EditText
        android:id="@+id/passwordcheckedt"
        android:layout_width="220dp"
        android:layout_height="35dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/round"
        android:ems="10"
        android:hint="Password Check"
        android:inputType="textPassword"
        android:textColor="#C86565"
        android:textColorHint="#C86565"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Passwordedt" />


    <EditText
        android:id="@+id/emailedt"
        android:layout_width="220dp"
        android:layout_height="35dp"
        android:layout_marginTop="248dp"
        android:background="@drawable/round"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColor="#C86565"
        android:textColorHint="#C86565"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registertoolbar" />

    <EditText
        android:id="@+id/nameedt"
        android:layout_width="220dp"
        android:layout_height="35dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/round"
        android:ems="10"
        android:hint="name"
        android:inputType="text"
        android:textColor="#FF6769"
        android:textColorHint="#FF6769"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailedt" />

    <EditText
        android:id="@+id/Passwordedt"
        android:layout_width="220dp"
        android:layout_height="35dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/round"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="#FF6769"
        android:textColorHint="#FF6769"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameedt" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/registertoolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF6769"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/alfa_slab_one"
            android:text="가 입   화 면"
            android:textSize="20dp"
            android:textColor="#FFFFFFFF"
            android:textAllCaps="false"
            android:textDirection="firstStrong"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="272dp"
            tools:layout_editor_absoluteY="22dp" />
    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="127dp"
        android:layout_height="127dp"
        app:layout_constraintBottom_toTopOf="@+id/emailedt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registertoolbar"
        app:srcCompat="@drawable/login" />
</androidx.constraintlayout.widget.ConstraintLayout>